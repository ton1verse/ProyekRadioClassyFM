// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  nama      String
  username  String   @unique
  email     String   @unique
  password  String
  foto      String?
  createdAt DateTime @default(now())

  @@map("users")
}

model Classier {
  id            Int      @id @default(autoincrement())
  nama          String
  motto         String?  @db.Text
  foto          String?
  status        String   @default("active")
  honor_per_jam Float?
  instagram     String?
  facebook      String?
  twitter       String?
  createdAt     DateTime @default(now())
  
  programs      Program[]
  podcasts      Podcast[]

  @@map("classiers")
}

model Program {
  id           Int      @id @default(autoincrement())
  classierId   Int      @map("classier_id")
  nama_program String
  deskripsi    String   @db.Text
  jadwal       String   @db.Text
  poster       String
  durasi       Int
  createdAt    DateTime @default(now())

  classier     Classier @relation(fields: [classierId], references: [id])

  @@map("programs")
}

model PodcastCategory {
  id        Int       @id @default(autoincrement())
  nama      String    @unique
  createdAt DateTime  @default(now())
  podcasts  Podcast[]

  @@map("podcast_categories")
}

model Podcast {
  id          Int      @id @default(autoincrement())
  classierId  Int      @map("classier_id")
  categoryId  Int?      @map("category_id")
  category    PodcastCategory? @relation(fields: [categoryId], references: [id])
  judul       String
  deskripsi   String   @db.Text
  poster      String
  link        String   @db.Text
  durasi      Int
  tanggal     DateTime @default(now())
  createdAt   DateTime @default(now())
  
  listens     PodcastListen[]

  classier    Classier        @relation(fields: [classierId], references: [id])

  @@map("podcasts")
}

model Musik {
  id        Int      @id @default(autoincrement())
  judul     String
  penyanyi  String
  foto      String
  deskripsi String   @db.Text
  lirik     String   @db.Text
  peringkat Int?     @map("peringkat")
  trend     String   @default("same") // "up", "down", "same"
  link      String?  @db.Text
  createdAt DateTime @default(now())

  @@map("musiks")
}

model NewsCategory {
  id        Int      @id @default(autoincrement())
  nama      String   @unique
  createdAt DateTime @default(now())
  beritas   Berita[]

  @@map("berita_categories")
}

model Berita {
  id          Int      @id @default(autoincrement())
  categoryId  Int?      @map("category_id")
  category    NewsCategory? @relation(fields: [categoryId], references: [id])
  judul       String
  isi         String   @db.LongText
  gambar      String
  link        String
  penulis     String
  tanggal     DateTime @default(now())
  createdAt   DateTime @default(now())

  @@map("beritas")
}

model Event {
  id          Int      @id @default(autoincrement())
  judul       String
  lokasi      String
  tanggal     DateTime
  deskripsi   String   @db.Text
  poster      String   @db.Text
  categoryId  Int?     @map("category_id")
  category    EventCategory? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())

  @@map("events")
}

model EventCategory {
  id        Int      @id @default(autoincrement())
  nama      String   @unique
  createdAt DateTime @default(now())
  events    Event[]

  @@map("event_categories")
}

model Gallery {
  id        Int      @id @default(autoincrement())
  judul     String
  deskripsi String   @db.Text
  tanggal   DateTime @default(now())
  images    GalleryImage[]
  createdAt DateTime @default(now())

  @@map("galleries")
}

model GalleryImage {
  id        Int      @id @default(autoincrement())
  url       String
  galleryId Int      @map("gallery_id")
  gallery   Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)

  @@map("gallery_images")
}

model Song {
  id        Int      @id @default(autoincrement())
  title     String
  artist    String
  album     String
  duration  String
  genre     String
  fileUrl   String?
  createdAt DateTime @default(now())

  @@map("songs")
}

model RadioStation {
  id        Int      @id @default(autoincrement())
  name      String
  frequency String
  genre     String
  status    String   @default("online")
  listeners Int      @default(0)
  createdAt DateTime @default(now())

  @@map("radiostations")
}

model PodcastListen {
  id        Int      @id @default(autoincrement())
  podcastId Int      @map("podcast_id")
  podcast   Podcast  @relation(fields: [podcastId], references: [id], onDelete: Cascade)
  ipAddress String?  @map("ip_address") // Optional: to track unique listens per session/IP if needed later
  createdAt DateTime @default(now())

  @@map("podcast_listens")
  @@index([createdAt])
  @@index([podcastId])
}
